<UserControl x:Class="VoyageurDeCommerce.vue.composants.PanelTournee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoyageurDeCommerce.vue.composants"
             mc:Ignorable="d"
             Background="white">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageTournee" Grid.Column="0"></Image>
        <StackPanel Grid.Column="1"  VerticalAlignment="Center">
            <TextBlock TextAlignment="Center" x:Name="TextNom"></TextBlock>
            <TextBlock TextAlignment="Center" x:Name="TextDistance"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
